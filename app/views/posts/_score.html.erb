<div class="votepost">
<% if @new_value != nil %>
	<h6  style='display:inline;'>Post Score: <span id="post-score"><%= @new_value %></span> </h6>
	<% if user_signed_in? %>
		<% user_score = @post.score_for(current_user) %>
		<% if user_score == nil %>
			Like:  <h6 style="display:inline;" id="no_score_yet"><%=link_to "", vote_post_path(@post, type: 'up', user_id: current_user.id, id: @post.id, old_score: @new_value), method: :post , :remote => true, :class => "voteonpost fi-star" , :style => 'color:gray; font-size:30px;'%></h6>
		<% elsif user_score.to_int == 1 %>
			Like:<h6 style="display:inline;" id="voted_up"><%=link_to "", vote_post_path(@post, type: 'down', user_id: current_user.id, id: @post.id, old_score: @new_value), method: :post , :remote => true, :class => "voteonpost fi-star" , :style => 'color:red;font-size:30px;'%></h6>
		<% elsif user_score.to_int == 0 or user_score.to_int == -1 %>
			Like:  <h6 style="display:inline;" id="no_score_yet"><%=link_to "", vote_post_path(@post, type: 'up', user_id: current_user.id, id: @post.id, old_score: @new_value), method: :post , :remote => true , :class => "voteonpost fi-star" , :style => 'color:gray; font-size:30px;'%></h6>
		<% end %>
	<% end %>
<% else %>
	<h6 >Post Score: <span id="post-score"><%= @post.score %></span> </h6>
		<% if user_signed_in? %>
		<% user_score = @post.score_for(current_user) %>
		<% if user_score == nil %>
			Like:  <h6 style="display:inline;" id="no_score_yet"><%=link_to "", vote_post_path(@post, type: 'up', user_id: current_user.id, id: @post.id, old_score: @post.score), method: :post , :remote => true, :class => "voteonpost fi-star", :style => 'color:gray;font-size:30px;' %></h6>
		<% elsif user_score.to_int == 1 %>
			Like:  <h6 style="display:inline;" id="voted_up"><%=link_to "", vote_post_path(@post, type: 'down', user_id: current_user.id, id: @post.id, old_score: @post.score), method: :post , :remote => true, :class => "voteonpost fi-star" , :style => 'color:red;font-size:30px;' %></h6>
		<% elsif user_score.to_int == 0 or user_score.to_int == -1 %>
			Like:  <h6 style="display:inline;" id="no_score_yet"><%=link_to "", vote_post_path(@post, type: 'up', user_id: current_user.id, id: @post.id, old_score: @post.score), method: :post , :remote => true , :class => "voteonpost fi-star", :style => 'color:gray;font-size:30px;' %></h6>
		<% end %>
	<% end %>
<% end %>




