<%= javascript_include_tag "foundation" %>

<div class="row">

	<div class="large-5 columns">
		<h3 class="lineups">The Lineup</h3>
			<% @posts.each do |post| %>

				<p class="lineupy"><%= link_to (@posts.index(post)+1) %></p><h4 class="lineupx"><%= link_to post.title, post_path(post) %></h4>
				<% end %>
	</div>

	<div class="large-7 columns">
		<img class="mainpost" src="http://static2.businessinsider.com/image/561d966d6bb3f7da6687deee-1200/new-england-patriots-v-dallas-cowboys.jpg">
		<div class="mainpostbox">
			<h1>Tom Brady beats Falcons in Super Bowl</h1>
		</div>
	</div>
</div>
<br>


<div class="row">
 <div class="large-8 columns">
	<h3 class="itemheader">Featured</h3>
		<% @posts.first(3).each do |post| %>
			<div class='post'>
				<img width="250px" src="http://static2.businessinsider.com/image/561d966d6bb3f7da6687deee-1200/new-england-patriots-v-dallas-cowboys.jpg">
				<div class="pcontent">
					<h3 class="ptitle"><%= link_to post.title, post_path(post) %></h3>
					<h6 class="pscore">Score: <%= post.score %></h6>
					<p class="pauthor">By: <%= link_to post.user.name, post.user %></p><hr>
					<p class="date"></p>
				</div>
			</div>
			<% end %>
	</div>
	<div class="large-4 columns">
		<h3 class="itemheader">Today's Leaderboard</h3>
			<ul class="lboardul">
				<% @users.each do |user| %>
					<img src="http://jaclynphillips.com/wp-content/uploads/2015/10/Headshot-Circle.png" width="75px">
						<div class="lcell">
							<li class="lboard"><%= link_to user.name, user_path(user) %>
							<p class="lbscore"><%= user.this_weeks_score %></p></li><hr>
						</div>
						<% end %>
			</ul>
	</div>
</div>
</div>
