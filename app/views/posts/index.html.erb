<%= javascript_include_tag "foundation" %>

<div class="row">

	<div class="large-2 columns" style="border-right: 1px solid grey;">
		<h3 class="itemheader">Welcome</h3>
		<h6 style="margin:0px; font-weight: bold;">About</h6>
		<p>Platform for all fans to talk about their teams</p>
		<h6 style="margin:0px; font-weight: bold;">Contact</h6>
		<p>Click here to contact us with any questions and feedback</p>
		<h6 style="margin:0px; font-weight: bold;">Features</h6>
		<p>Fan articles, coaches and front office approval ratings, polls, leaderboards, power rankings, team history, stadium reviews, and more</p>
		<h66 style="margin:0px; font-weight: bold;">Sign Up</h6>
		<p>Visit our login page</p>
		<h6 style="margin:0px; font-weight: bold;">Write</h6>
		<p>Post an article today</p>
	</div>

	<div class="large-6 columns">
		<img class="mainpost" src="http://static2.businessinsider.com/image/561d966d6bb3f7da6687deee-1200/new-england-patriots-v-dallas-cowboys.jpg">
		<div class="mainpostbox">
			<h1>Tom Brady beats Falcons in Super Bowl</h1>
		</div>
	</div>

	<div class="large-4 columns">
		<h4 class="lineups">The Lineup</h4>
			<% @posts.each do |post| %>
			<p class="lineupy"><%= link_to (@posts.index(post)+1) %></p><h4 class="lineupx"><%= link_to post.title, post_path(post) %></h4>
			<% end %>
	</div>

</div>
<br>

<div class="row" style="background-color: #f5f5f5;">
 <div class="large-4 columns" style="border-right: 1px solid grey; background-color: white;">
	 <h3 class="itemheader">Welcome</h3>
 </div>
 <div class="large-4 columns">
	<h3 class="itemheader">Featured</h3>
		<% @posts.first(3).each do |post| %>
			<div class='post'>
				<img width="150px" src="http://static2.businessinsider.com/image/561d966d6bb3f7da6687deee-1200/new-england-patriots-v-dallas-cowboys.jpg">
				<div class="pcontent">
					<h3 class="ptitle"><%= link_to post.title, post_path(post) %></h3>
					<h6 class="pscore">Score: <%= post.score %></h6>
					<p class="pauthor">By: <%= link_to post.user.name, post.user %></p><hr>
					<p class="date"></p>
				</div>
			</div>
			<% end %>
	</div>
	<div class="large-4 columns">
		<h3 class="itemheader">Today's Leaderboard</h3>
			<ul class="lboardul">
				<% @users.each do |user| %>
					<img src="http://jaclynphillips.com/wp-content/uploads/2015/10/Headshot-Circle.png" width="75px">
						<div class="lcell">
							<li class="lboard"><%= link_to user.name, user_path(user) %>
							<p class="lbscore"><%= user.this_weeks_score %></p></li><hr>
						</div>
						<% end %>
			</ul>
	</div>
</div>
