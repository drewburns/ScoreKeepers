<%= javascript_include_tag "foundation" %><hr>
<div class="row">
	<div class="large-5 columns">
		<img src='https://offthemonstersports.com/wp-content/uploads/2016/11/Tom-Brady-ten-years-10-21-15.jpg'>
		<h1 style="line-height: 1.1; padding-top: 10px;"><b>Tom Brady leads Patriots over Falcons in Super Bowl Comeback</b></h1>
		<h3>By: Tom Brady</h3>
	</div>

	<div class="large-3 columns">
		<img src='http://static.nfl.com/static/content/public/photo/2015/09/10/0ap3000000525744.jpg'>
		<h3>Title 1 here</h3>
		<img src='https://fm.cnbc.com/applications/cnbc.com/resources/img/editorial/2017/01/30/104249810-Julian.600x400.jpg?v=1485805578'>
		<h3>Title 2 here</h3>
	</div>

	<div class="large-4 columns">
		<h3 class="itemheader">The Lineup</h3>
		<div class="lineup">
			<% @posts.first(9).each do |post| %>
			<h5 class="lineuptitle"><%= link_to (@posts.index(post)+1).to_s %>. <%= link_to post.title , post_path(post) %></h5>
			<% end %>
		</div>
	</div>
</div>

<hr style="width: 50px; background-color: #f5f5f5;">

<div class="row">
	<div class="large-3 columns" style="background-color: white;">
			<h3 class="itemheader">Baseball</h3>
				<ul style="padding: 0px; margin: 0px;">
					<% @top_baseball.each do |team| %>
						<!-- <img src="https://ih0.redbubble.net/image.318539865.1262/flat,800x800,075,f.u1.jpg" style="width:75px; height:75px; border-radius:50%;"> -->
					<img src=<%= team.picture_url %> style="width:50px; height:50px; border-radius:50%;">
					<%= link_to team.name, team, :style => "font-size: 24px; margin-left: 15px; color: black;" %>
					<hr style="margin: 12px;">
					<% end %>
				</ul>
	</div>

	<div class="large-3 columns" style="background-color: white;">
			<h3 class="itemheader">Basketball</h3>
				<ul class="lboardul">
					<% @top_basketball.each do |team| %>
						<!-- <img src="https://ih0.redbubble.net/image.318539865.1262/flat,800x800,075,f.u1.jpg" style="width:75px; height:75px; border-radius:50%;"> -->
							<div class="lcell">
								<img src=<%= team.picture_url %> style="width:75px; height:75px; border-radius:50%;">
								<li class="lboard"><%= link_to team.name, team %>
							</div>
							<hr style="margin: 12px;">
					<% end %>
			</ul>
	</div>
	<div class="large-3 columns" style="background-color: white;">
			<h3 class="itemheader">Football</h3>
				<ul class="lboardul">
					<% @top_football.each do |team| %>
						<!-- <img src="https://ih0.redbubble.net/image.318539865.1262/flat,800x800,075,f.u1.jpg" style="width:75px; height:75px; border-radius:50%;"> -->
							<div class="lcell">
								<img src=<%= team.picture_url %> style="width:75px; height:75px; border-radius:50%;">
								<li class="lboard"><%= link_to team.name, team %>
							</div>
							<hr style="margin: 12px;">
					<% end %>
			</ul>
	</div>
	<div class="large-3 columns" style="background-color: white;">
			<h3 class="itemheader">Hockey</h3>
				<ul class="lboardul" >
					<% @top_hockey.each do |team| %>
						<!-- <img src="https://ih0.redbubble.net/image.318539865.1262/flat,800x800,075,f.u1.jpg" style="width:75px; height:75px; border-radius:50%;"> -->
							<div class="lcell">
								<img src=<%= team.picture_url %> style="width:75px; height:75px; border-radius:50%;">
								<li class="lboard" style='display:inline;'><%= link_to team.name, team %>
							</div>
							<hr style="margin: 12px;">
					<% end %>
			</ul>
	</div>
</div>

<div style="background-image: url(https://images6.alphacoders.com/404/404696.jpg); height:700px; padding-top: 150px;"></div>
