<style>
	@import url('//fonts.googleapis.com/css?family=Catamaran');
	@import url('//fonts.googleapis.com/css?family=Yanone+Kaffeesatz:300,400');

body {
  font-family: 'Catamaran', sans-serif;}

.flashtitle{
  font-family: 'Yanone Kaffeesatz', sans-serif;
  font-size: 32px;
  padding-top: 5px;
  line-height: 1;}

.xy{
	font-size: 22px;
	width: 90%;}

.xyz{
	font-size: 26px;
	float: right;
	width: 10%;
	padding: 0px;
	margin: 0px;}
</style>

<%= javascript_include_tag "foundation" %>
<div class="row" style="width: 90%; padding: 7px;">
	<div class="large-6 columns">
			<h3 style="font-family: 'Catamaran', sans-serif; border-top: 3px solid #8cb2ff;"><b>The Lineup</b></h3>
			<h4><% @posts.first(9).each do |post| %>
			<h5 class="lineuptitle"><%= link_to (@posts.index(post)+1).to_s %>. <%= link_to post.title , post_path(post) %></h5>
		</h4><% end %></div>
</div>

<div style="background-color: #f5f5f5; margin-top: 30px;">
<div class="row" style="width:90%; background-color: #f7f7f7; padding-top: 20px; padding-bottom: 20px;">
<h4 style="padding-left: 17px; padding-bottom:5px;">Highest rated coaches</h4>
<div class="large-3 columns" style="background-color: #f7f7f7;">
		<h3 class="itemheader">Baseball</h3>
			<ul style="padding: 0px; margin: 0px;">
				<% @top_baseball.each do |team| %>
					<!-- <img src="https://ih0.redbubble.net/image.318539865.1262/flat,800x800,075,f.u1.jpg" style="width:75px; height:75px; border-radius:50%;"> -->
				<img src=<%= team.thumb %> style="width:40px; height:40px; border-radius:50%;">
				<%= link_to team.coach, team, :style => "font-size: 21px; margin-left: 15px; color: black;" %>
				<hr style="margin: 5px;">
				<% end %>
			</ul>
</div>

<div class="large-3 columns">
	<h3 class="itemheader">Basketball</h3>
		<ul style="padding: 0px; margin: 0px;">
			<% @top_basketball.each do |team| %>
				<!-- <img src="https://ih0.redbubble.net/image.318539865.1262/flat,800x800,075,f.u1.jpg" style="width:75px; height:75px; border-radius:50%;"> -->
			<img src=<%= team.thumb %> style="width:40px; height:40px; border-radius:50%;">
			<%= link_to team.coach, team, :style => "font-size: 21px; margin-left: 15px; color: black;" %>
			<hr style="margin: 5px;">
			<% end %>
		</ul>
</div>

<div class="large-3 columns">
	<h3 class="itemheader">Football</h3>
		<ul style="padding: 0px; margin: 0px;">
			<% @top_football.each do |team| %>
				<!-- <img src="https://ih0.redbubble.net/image.318539865.1262/flat,800x800,075,f.u1.jpg" style="width:75px; height:75px; border-radius:50%;"> -->
			<img src=<%= team.thumb %> style="width:40px; height:40px; border-radius:50%;">
			<%= link_to team.coach, team, :style => "font-size: 21px; margin-left: 15px; color: black;" %>
			<hr style="margin: 5px;">
			<% end %>
		</ul>
</div>

<div class="large-3 columns">
	<h3 class="itemheader">Hockey</h3>
		<ul style="padding: 0px; margin: 0px;">
			<% @top_hockey.each do |team| %>
				<!-- <img src="https://ih0.redbubble.net/image.318539865.1262/flat,800x800,075,f.u1.jpg" style="width:75px; height:75px; border-radius:50%;"> -->
			<img src=<%= team.thumb %> style="width:40px; height:40px; border-radius:50%;">
			<%= link_to team.coach, team, :style => "font-size: 21px; margin-left: 15px; color: black;" %>
			<hr style="margin: 5px;">
			<% end %>
		</ul>
</div>
</div>
</div>

<div class="row" style="width: 90%; margin-top: 50px; margin-bottom: 50px; background-color: white">
	<h4 style="padding-left: 18px; padding-top: 5px;">Featured Posts</h4>
	<div class="large-3 columns">
			<a href="https://www.bostonsportsjournal.com/2017/12/20/much-concern-alex-guerrerobill-belichick-rift-patriots/"><img style="width: 100%; height: 250px;" src='https://d2lzcnyuvtotl1.cloudfront.net/uploads/2017/12/USATSI_10348215_168384367_lowres.jpg'></a>
			<h3 class="flashtitle">How much of a concern is this Alex Guerrero/Bill Belichick rift for the Patriots?</h3>
			<h5>Greg Bedard breaks down Seth Wickersham's article on the alleged rift in the Patriots organization</h5></div>
	<div class="large-3 columns">
			<a href="https://www.si.com/longform/2018/nba-international-oral-history/index.html"><img style="width: 100%; height: 250px;" src='https://www.si.com/longform/2018/nba-international-oral-history/img/image1.jpg'>
			<h3 class="flashtitle">An Oral History of How the International Game Helped Forge the Modern NBA</h3>
			<h5>Andrew Sharp of Sports Illustrated discusses the history and impact of international players in the NBA</h5></div>
	<div class="large-3 columns">
			<a href="https://www.theringer.com/nfl-playoffs/2018/1/25/16931792/five-team-building-lessons-season-patriots-eagles"><img style="width: 100%; height: 250px;" src='https://cdn-s3.si.com/styles/marquee_large_2x/s3/images/blake-bortles.jpg?itok=_YPjmq_X'>
			<h3 class="flashtitle">Five Team-Building Lessons From the 2017 NFL Season</h3>
			<h5>A look at how the NFL's best teams have built their teams in untradtional ways</h5></div>
	<div class="large-3 columns">
			<a href="https://www.theringer.com/nba/2017/11/9/16626208/nba-houston-rockets-3-pointers-james-harden"><img style="width: 100%; height: 250px;" src='https://cdn-s3.si.com/s3fs-public/videos/2157889318001_4052548384001_james-harden.jpg'></a>
			<h3 class="flashtitle">Can You Take 3s Higher?</h3>
			<h5>The Ringer's Zach Kram analyzes the Houston Rockets record breaking 3-pt shooting pace and how it compares to the rest of the NBA</h5></div>
</div>

<div style="background-color: #f5f5f5; padding-top: 10px;">
<div class="row" style="width: 90%; margin-top: 25px;">
	<div class="large-1 columns"><p></p></div>
	<div class="large-4 columns">
			<h5 class="itemheader">Today's Writer Leaderboard</h5>
					<ul class="x">
						<% @users.each do |user| %>
						<li class="xy"><%= link_to user.name, user_path(user) %> <p class="xyz"><%= user.this_weeks_score %></p></li>
							<hr style="margin: 1px;">
						<% end %>
					</ul>
	</div>
		<div class="large-2 columns"><p></p></div>
	<div class="large-3 columns">
		<h3 style="text-align: center;"><b>Want to see your name on the leaderboard?<b></h3>
		<%= link_to "Create new", new_post_path(edit: false) , :class => 'button'%>
	</div>
	<div class="large-2 columns"><p></p></div>
</div>
</div>
