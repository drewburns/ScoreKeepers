<head>
  <title>My page</title>
  <%= stylesheet_link_tag 'ContentTools/build/content-tools.min' %>

  <style>
    .author {
      font-style: italic;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div data-name="main-content" align="center">
    <h2>
      Create your post in the section below.
    </h2>
    </br>
    </br>
  </div>


  <%= form_for [@post], :html => {:id => 'postsubmit'} do |f| %>

    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :title, :value => nil %>
    <%= f.hidden_field :content, :value => nil %>
    <%= f.hidden_field :status, :value => "draft" %>
  <% end %>

  <div align="center" data-editable data-name="title">
    <h2 id="post-title-block">Title Me</h2>
  </div>
<!--   <div align="center" data-editable data-name="header-photo">
    <p>Place the image you would like for your header in place of this text.  Someday it will be your header.</p>
  </div> -->
  <div align="center" data-editable data-name="main-content">
      <p id="post-content">You should be able to edit this</p>
  </div>

  <%= javascript_include_tag 'ContentTools/build/content-tools' %>
  <%= javascript_include_tag 'editor' %>
</body>