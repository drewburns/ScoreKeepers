<div class="row">
	<div class="large-2 columns">
		<h3>Team Links</h3>
			<ul>
					<% for i in Team.where(sport_string: params[:sport]) %>
							<li><%= link_to i.name, team_path(i.id)%></li>
					<%end%>
			</ul>

	</div>

	<div class="large-7 columns" style="padding-right: 15px;">
		<h3 class="itemheader">Recent <%= @posts.first.sport.capitalize %> Posts </h3>
		<% @posts.each do |post| %>
			<div class='post'>
					<img width="250px" src="http://static2.businessinsider.com/image/561d966d6bb3f7da6687deee-1200/new-england-patriots-v-dallas-cowboys.jpg">
					<div class="pcontent">
						<h3 class="ptitle"><%= link_to post.title, post_path(post) %></h3>
						<h6 class="pscore">Score: <%= post.score %></h6>
						<p class="pauthor">By: <%= link_to post.user.name, post.user %></p><hr>
						<p class="date"></p>
					</div>
			</div>
			<% end %>
	</div>

	<div class="large-3 columns" style="background-color: #f7f7f7;">
		<h3 class="itemheader">Today's Leaderboard</h3>
			insert leaderbaord here

		<h3 class="itemheader">Top Posts</h3>
			<% Post.all.sort_by{|p| p.score}.reverse.first(5).each do |post| %>
				<img src="http://m.mlb.com/assets/images/8/7/2/118673872/cuts/Fenway_1280_khmw7zay_3y3sxkqt.jpg">
				<p><%= post.title %></p>
			<% end %>
	</div>
</div>
