<div class="row">
	<div class="large-2 columns">
		<h3>Team Links</h3>
			<ul>
					<% Team.where(sport_string: params[:sport]).each do |team| %>
						<img src=<%= team.picture_url %> style="width:50px;height:50px;">
							<li><%= link_to team.name, team_path(team)%></li>
					<%end%>
			</ul>

	</div>

	<div class="large-7 columns">
		<% if @posts.count != 0 %>
			<h3 class="itemheader">Recent <%= @sport.capitalize %> Posts </h3>
		<% end %>
		<% @posts.each do |post| %>
			<div class='post'>
					<!-- <img width="250px" src=<%= post.full_size %>> -->
									<img style="width:250px;" src ="https://img.buzzfeed.com/buzzfeed-static/static/2014-04/campaign_images/webdr08/9/22/21-soccer-stadiums-you-should-watch-a-game-in-bef-2-3662-1397095514-17_dblbig.jpg">
					<div class="pcontent">
						<h3 class="ptitle"><%= link_to post.title, post_path(post) %></h3>
						<h6 class="pscore">Score: <%= post.score %></h6>
						<p class="pauthor">By: <%= link_to post.user.name, post.user %></p><hr>
						<p class="date"></p>
					</div>
			</div>
			<% end %>
			<%= will_paginate @posts, :class => 'flickr_pagination' %>
	</div>

	<div class="large-3 columns" style="background-color: #f9f9f9;">
		<% if @posts.count != 0 %>
		<h3 class="itemheader">Today's <%= @posts.first.sport.capitalize %> Leaderboard</h3>
		<% end %>
			<ul class="lboardul">
				<% @users.each do |user| %>
					<img src=<%= user.thumbnail %> style="width:75px; height:75px; border-radius:50%;">
						<div class="lcell">
							<li class="lboard"><%= link_to user.name, user_path(user) %>
							<p class="lbscore"><%= user.this_weeks_score_sport(@sport) %></p></li><hr>
						</div>
						<% end %>
			</ul>

		<h3 class="itemheader">Top Posts</h3>
			<% Post.all.sort_by{|p| p.score}.reverse.first(5).each do |post| %>
				<img src=<%= post.full_size %>>
				<p><%= post.title %></p>
			<% end %>
	</div>
</div>
