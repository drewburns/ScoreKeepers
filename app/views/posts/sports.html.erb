<div class="row"><br>
	<div class="large-6 columns">
		<br>
		<img src ="https://pbs.twimg.com/media/C385y28UcAAG5l1.jpg">
		<h1>Enter Post title here</h1>
		<h3>Enter post author here</h3>
	</div>

	<div class="large-3 columns"><br>
		<img width="100%" src="https://usatpatriotswire.files.wordpress.com/2016/12/gettyimages-627687580.jpg?w=1000&h=600&crop=1">
		<h5>Enter title here</h5>
		<img width="100%" src="https://usatpatriotswire.files.wordpress.com/2016/12/gettyimages-627687580.jpg?w=1000&h=600&crop=1">
		<h5>Enter title here</h5>
	</div>

  <div class="large-3 columns"><br>
		<img width="100%" src="https://usatpatriotswire.files.wordpress.com/2016/12/gettyimages-627687580.jpg?w=1000&h=600&crop=1">
		<h5>Enter title here</h5>
		<img width="100%" src="https://usatpatriotswire.files.wordpress.com/2016/12/gettyimages-627687580.jpg?w=1000&h=600&crop=1">
		<h5>Enter title here</h5>
	</div>
</div>

<hr style="width: 50px; background-color: #f5f5f5;">

<div class="row">
	<div class="large-2 columns">
		<h2>Team Pages</h2>
		<h4>Click on the logo to view each team's page</h4>
		<h4>Rate your favorite team's coach, owner, and stadium</h4>
	</div>
			<ul>
					<% Team.where(sport_string: params[:sport]).each do |team| %>
					<div class="large-1 columns">
						<!-- <img src=<%= team.picture_url %> style="width: 100%"> -->
						<%= link_to(image_tag(team.thumb), team) %>
					</div>
					<%end%>
			</ul>
</div>

<hr style="width: 50px; background-color: #f5f5f5;">

<div class="row">
	<div class="large-7 columns">
		<% if @posts.count != 0 %>
			<h3 class="itemheader">Recent <%= @sport.capitalize %> Posts </h3>
		<% end %>
		<% @posts.each do |post| %>
			<div class='post'>
					<!-- <img width="250px" src=<%= post.full_size %>> -->
									<img style="width:250px;" src ="https://img.buzzfeed.com/buzzfeed-static/static/2014-04/campaign_images/webdr08/9/22/21-soccer-stadiums-you-should-watch-a-game-in-bef-2-3662-1397095514-17_dblbig.jpg">
					<div class="pcontent">
						<h3 class="ptitle"><%= link_to post.title, post_path(post) %></h3>
						<h6 class="pscore">Score: <%= post.score %></h6>
						<p class="pauthor">By: <%= link_to post.user.name, post.user %></p><hr>
						<p class="date"></p>
					</div>
			</div>
			<% end %>
			<%= will_paginate @posts, :class => 'flickr_pagination' %>
	</div>

	<div class="large-3 columns" style="background-color: #f5f5f5;">
		<% if @posts.count != 0 %>
		<h3 class="itemheader">Today's <%= @posts.first.sport.capitalize %> Leaderboard</h3>
		<% end %>
			<ul class="lboardul">
				<% @users.each do |user| %>
					<img src=<%= user.thumbnail %> style="width:75px; height:75px; border-radius:50%;">
						<div class="lcell">
							<li class="lboard"><%= link_to user.name, user_path(user) %>
							<p class="lbscore"><%= user.this_weeks_score_sport(@sport) %></p></li><hr>
						</div>
						<% end %>
			</ul>

		<h3 class="itemheader">Top Posts</h3>
			<% Post.all.sort_by{|p| p.score}.reverse.first(5).each do |post| %>
				<img src=<%= post.full_size %>>
				<p><%= post.title %></p>
			<% end %>
	</div>
</div>
