      <li ><%= link_to "Logout" , destroy_user_session_path , method: "delete" %></li>
      <!-- <li class="has-dropdown"> -->
        <!-- <ul class="dropdown"> -->
        <!-- </ul> -->
      <!-- </li> -->
    </ul>
    </section>

    <% else %>

    <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="left">
      <li class="menuitem"><a href="/sports?sport=baseball" style="background-color: white; padding-top: 10px; height: 70px; color: black; font-size: 24px; border-bottom: 2px solid #e5e5e5; border-right:">Baseball</a></li>
      <li class="menuitem"><a href="/sports?sport=basketball" style="background-color: white; padding-top: 10px; height: 70px; color: black; font-size: 24px; border-bottom: 2px solid #e5e5e5;">Basketball</a></li>
      <li class="menuitem"><a href="/sports?sport=football" style="background-color: white; padding-top: 10px; height: 70px; color: black; font-size: 24px; border-bottom: 2px solid #e5e5e5;">Football</a></li>
      <li class="menuitem"><a href="/sports?sport=hockey" style="background-color: white; padding-top: 10px; height: 70px; color: black; font-size: 24px; border-bottom: 2px solid #e5e5e5;">Hockey</a></li>
      <li class="menuitem"><a href="/sports?sport=soccer" style="background-color: white; padding-top: 10px; height: 70px; color: black; font-size: 24px; border-bottom: 2px solid #e5e5e5;">Soccer</a></li>
    </ul>
    <ul class="right">
      <li style="background-color: white; padding-top: 10px; height: 70px; color: black; font-size: 24px; border-bottom: 2px solid #e5e5e5; border-right:"><%= link_to "Team Index" , teams_path %></li>
      <li class="menuitem"><%= link_to "Sign In" , new_user_session_path, :style => 'style: background-color: white; padding-top: 10px; height: 70px; color: white; font-size: 24px; border-bottom: 2px solid #e5e5e5; border-right:' %></li>
      <li class="menuitem"><%= link_to "Create Account" , new_user_registration_path %></li>
    </ul>
    </section>
  <% end %>
</nav>
</div>





<script type="text/javascript">
  $(document).foundation();

$('.title-bar').on('sticky.zf.stuckto:top', function(){
  $(this).addClass('shrink');
}).on('sticky.zf.unstuckfrom:top', function(){
  $(this).removeClass('shrink');
})
</script>
