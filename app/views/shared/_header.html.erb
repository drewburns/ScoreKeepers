<%= javascript_include_tag "foundation" %>

<div class="contain-to-grid sticky">
  <nav class="top-bar" data-topbar role="navigation" data-options="sticky_on: large">
    <ul class="title-area">
      <li class="name">
      <h1><%= link_to "Sports Site" , root_path %></h1>
      </li>
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <% if user_signed_in? %>
    <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">



			 <ul class="menu">
        <% if current_user.admin == true %>
          <li><%= link_to "Admin Panel", admin_path(id: current_user.id) %></li>
        <% end %>
         <li class=""><%= link_to "Team Index" , teams_path %></li>

			</ul>
      <li class="has-dropdown">
        <a><%= link_to current_user.email , current_user %></a>
        <ul class="dropdown">
          <li class=""><%= link_to "Creator Center" ,  creator_path(id: current_user.id) %></li>
          <li><%= link_to "Profile" , current_user %></li>
          <li><%= link_to "Settings" , edit_user_registration_path %> </li>
          <li ><%= link_to "Logout" , destroy_user_session_path , method: "delete" %></li>
        </ul>
      </li>
    </ul>
    </section>

  <% else %>

    <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <li class="menuitem"><%= link_to "Sign In" , new_user_session_path %></li>
      <li class="menuitem"><%= link_to "Create Account" , new_user_registration_path %></li>
    </ul>
    </section>
  <% end %>
</nav>
</div>
<div class="icon-bar four-up" style='background-color:grey;'>
  <a class="item" href="/sports?sport=basketball">
    <img src="http://cdn.onlinewebfonts.com/svg/img_192451.png" >
    <label>Basketball</label>
  </a>
  <a class="item" href="/sports?sport=football">
    <img src="https://i1.wp.com/www.swantonschools.org/wp-content/uploads/2016/07/American-Football-Ball-icon.png?resize=256%2C256" >
    <label>Football</label>
  </a>
  <a class="item" href="/sports?sport=hockey">
    <img src="https://cdn.onlinewebfonts.com/svg/img_531805.png" >
    <label>Hockey</label>
  </a>
  <a class="item" href="/sports?sport=baseball">
    <img src="https://images.vexels.com/media/users/3/135320/isolated/preview/79a491be18da0b7de8f0b23d251613c8-baseball-bat-ball-by-vexels.png" >
    <label>Baseball</label>
  </a>
</div>

<script type="text/javascript">
$(document).foundation();

$('.title-bar').on('sticky.zf.stuckto:top', function(){
  $(this).addClass('shrink');
}).on('sticky.zf.unstuckfrom:top', function(){
  $(this).removeClass('shrink');
})
</script>