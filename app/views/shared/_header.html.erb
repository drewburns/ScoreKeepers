<%= javascript_include_tag "foundation" %>

<div class="contain-to-grid sticky large-12 columns" style="background-color: #2f5799;">
  <nav class="top-bar large-12 columns" data-topbar role="navigation" data-options="sticky_on: large" style="max-width:100rem; background-color: #2f5799;">
    <ul class="title-area" style="background-color:#2f5799; margin-left: 10%;">
      <li class="name" style="background-color: #2f5799;"><h1 style="font-size: 45px; font-family: 'Fugaz One', cursive; padding-top: 10px; color: white"><%= link_to "Scorekeepers" , root_path, :style => "text-decoration: uppercase; color: white;" %></h1></li>
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <% if user_signed_in? %>
    <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <li class=""><%= link_to "Team Index" , teams_path %></li>
      <ul class="menu">
      <% if current_user.admin %>
        <li><%= link_to "Admin Panel", admin_path(id: current_user.id) %></li>
      <% end %>
      </ul>
          <!-- <li ><%= link_to "Logout" , destroy_user_session_path , method: "delete" %></li> -->
      <li class=""><%= link_to "Creator Center" ,  creator_path(id: current_user.id) %></li>
      <li class="" style='display:inline;'><%= link_to image_tag(current_user.thumbnail, :style => "height:35px;width:35px;border-radius:50%;"), current_user, :style => 'display:inline;' %><%= link_to current_user.name , current_user , :style => 'display:inline;'%></li>
      <!-- <li><%= link_to "Profile" , current_user %></li> -->
          <li><%= link_to "Settings" , edit_user_registration_path %> </li>
          <li ><%= link_to "Logout" , destroy_user_session_path , method: "delete" %></li>

      <!-- <li class="has-dropdown"> -->
        <!-- <ul class="dropdown"> -->
        <!-- </ul> -->
      <!-- </li> -->
    </ul>
    </section>

  <% else %>

    <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <li><a style="font-family: 'Karla', sans-serif; background-color: #2f5799; color: white; font-size: 25px;" href="/sports?sport=basketball">About Us</a>
      <li><a style="font-family: 'Karla', sans-serif; background-color: #2f5799; color: white; font-size: 25px;" href="/sports?sport=basketball">Sports</a></li>
      <li><%= link_to "Team Index" , teams_path, :style => "font-family: 'Karla', sans-serif; background-color: #2f5799; color: white; font-size: 25px;" %></li>
      <li><%= link_to "Sign In" , new_user_session_path, :style => "font-family: 'Karla', sans-serif; background-color: #2f5799; color: white; font-size: 25px;"%></li>
      <li><%= link_to "Create Account" , new_user_registration_path, :style => "font-family: 'Karla', sans-serif; background-color: #2f5799; color: white; font-size: 25px;"%></li>
    </ul>
    </section>
  <% end %>
</nav>
</div>






<script type="text/javascript">
  $(document).foundation();

$('.title-bar').on('sticky.zf.stuckto:top', function(){
  $(this).addClass('shrink');
}).on('sticky.zf.unstuckfrom:top', function(){
  $(this).removeClass('shrink');
})
</script>
