<%= javascript_include_tag "foundation" %>

<div class="contain-to-grid sticky large-12 columns" style="background-color: white; border-bottom: 2px solid #e5e5e5; height:70px;">
  <nav class="top-bar large-12 columns" data-topbar role="navigation" data-options="sticky_on: large" style="max-width:100rem; background-color: white;">
    <ul class="title-area">
      <li class="name">
      <h1 style="font-size: 30px; color: black; background-color: #e5e5e5;"><%= link_to "Sports Site" , root_path %></h1>
      </li>
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <% if user_signed_in? %>
    <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <li class=""><%= link_to "Team Index" , teams_path %></li>
			 <ul class="menu">
         <li class="menuitem" style="background-color: yellow;"><a href="/sports?sport=basketball">Basketball</a></li>
         <li class="menuitem"><a class="item" href="/sports?sport=football">Football</li>
           <li class="menuitem"><a class="item" href="/sports?sport=basketball">Baseball</a></li>
           <li class="menuitem"><a class="item" href="/sports?sport=basketball">Hockey</a></li>
           <li class="menuitem"><a class="item" href="/sports?sport=basketball">Basketball</a></li>
        <% if current_user.admin %>
          <li><%= link_to "Admin Panel", admin_path(id: current_user.id) %></li>
        <% end %>
      </ul>
      <!-- <li ><%= link_to "Logout" , destroy_user_session_path , method: "delete" %></li> -->
      <li class=""><%= link_to "Creator Center" ,  creator_path(id: current_user.id) %></li>
      <li class="" style='display:inline;'><%= link_to image_tag(current_user.thumbnail.url, :style => "height:35px;width:35px;border-radius:50%;"), current_user, :style => 'display:inline;' %><%= link_to current_user.name , current_user , :style => 'display:inline;'%></li>
