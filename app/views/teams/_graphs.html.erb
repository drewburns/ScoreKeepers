<div class=" ">
	<h3>Team Rating</h3>
	<%= pie_chart @team.chart_data("team_score"), :class => 'pie-chart' %>
	<% if user_signed_in? %>
		<% if current_user.has_favorite_team(@team) %>
			<% user_vote = current_user.vote_status_on(@team, "team_score") %>
			<% if user_vote == nil %>
				<%= link_to "Approve" , vote_team_path(@team, vote_name: "team_score", type: 'approve', user_id: current_user.id, id: @team.id), method: :post, :remote => true , :class => 'fi-arrow-up'%>
				<%= link_to "Disapprove" , vote_team_path(@team, vote_name: "team_score", type: 'disapprove', user_id: current_user.id, id: @team.id), method: :post, :remote => true , :class => 'fi-arrow-down'%>
			<% elsif user_vote == "approve" %>
				<%= link_to "Approve" , vote_team_path(@team, vote_name: "team_score", type: 'approve', user_id: current_user.id, id: @team.id), method: :post, :remote => true, :style => "color:green;" , :class => 'fi-arrow-up'%>
				<%= link_to "Disapprove" , vote_team_path(@team, vote_name: "team_score", type: 'disapprove', user_id: current_user.id, id: @team.id), method: :post, :remote => true , :class => 'fi-arrow-down'%>
			<% else %>
				<%= link_to "Approve" , vote_team_path(@team, vote_name: "team_score", type: 'approve', user_id: current_user.id, id: @team.id), method: :post, :remote => true , :class => 'fi-arrow-up'%>
				<%= link_to "Disapprove" , vote_team_path(@team, vote_name: "team_score", type: 'disapprove', user_id: current_user.id, id: @team.id), method: :post, :remote => true , :style => "color:red;" , :class => 'fi-arrow-down'%>
			<% end %>
		<% else %>
			<p>Add to favorite teams to vote</p>
		<% end %>
	<% else %>
		<p>Log in to vote</p>
	<% end %>
</div>
