<%= provide(:title , "Team Index") %>
<!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/foundation/6.4.1/css/foundation.min.css"> -->
<style type="text/css">
ul {
  list-style-type: none;
}
  #teamlist {
    clear:both;
  }


  #sport-tabs {
    /*border-radius: 5px;*/
  }
  .sport-tab:hover {
    background-color: black;
    color: white;
  }
  .sport-tab {
    border: solid .5px #e5e5e5;
    cursor: pointer;
    text-align: center;
    padding-top: 8px;
    height:50px;
    font-size: 20px;
    background-color: white;
  }
  .showing {
    display: block;
  }
  .hidden {
    display: none;
  }
</style>
<br>
<div class='large-9 medium-10 small-12 large-centered medium-centered columns'>
  <h4 style="padding-left: 1.5%;"><b>Team Index</b>: Add your favorite teams by clicking the button next to the team name</h4>
  <ul id="sport-tabs" class='large-12 columns medium-12 small-12 large-centered small-centered medium-centered'>
    <li>
      <div class="large-2 medium-4 small-6 columns sport-tab" id='basketball-tab'>Basketball</div>
    </li>
    <li>
      <div class="large-2 medium-4 small-6 columns sport-tab" id='hockey-tab'>Hockey</div>
    </li>
    <li>
      <div class="large-2 medium-4  small-6 columns sport-tab" id='football-tab'>Football</div>
    </li>
    <li>
      <div class="large-2 medium-4 small-6 columns sport-tab" id='baseball-tab'>Baseball</div>
    </li>
    <li>
      <div class="large-2 medium-4 small-6 columns sport-tab" id='soccer-tab'>Soccer</div>
    </li>
  </ul>
<br><br><br>
  <ul id="basketball-teams" class=''>
  <% @basketball.each do |team| %>
    <div class='large-4 medium-6 small-12 columns'>
      <li>
      <%= render team %>
      </li>
    </div>
  <% end %>
  </ul>
  <ul id="hockey-teams" class='hidden'>
  <% @hockey.each do |team| %>
    <div class='large-4 medium-6 small-12 columns'>
      <li>
      <%= render team %>
      </li>
    </div>
  <% end %>
  </ul>
  <ul id="football-teams" class='hidden'>
  <% @football.each do |team| %>
    <div class='large-4 medium-6 small-12 columns'>
      <li>
      <%= render team %>
      </li>
    </div>
  <% end %>
  </ul>
  <ul id="baseball-teams" class='hidden'>
  <% @baseball.each do |team| %>
    <div class='large-4 medium-6 small-12 columns'>
      <li>
      <%= render team %>
      </li>
    </div>
  <% end %>
  </ul>

  <ul id="soccer-teams" class='hidden'>
  <% @soccer.each do |team| %>
    <div class='large-4 medium-6 small-12 columns'>
      <li>
      <%= render team %>
      </li>
    </div>
  <% end %>
  </ul>

  </div>
</div>



<script type="text/javascript">
  // $(document).foundation();
  $( ".sport-tab" ).click(function(event) {
    var sport = $(this).attr('id');
    // alert(sport);

    if ( sport == "basketball-tab"){
      $("#basketball-teams").removeClass( "hidden" ).removeClass( "hidden" );
      $("#hockey-teams").removeClass( "hidden" ).addClass( "hidden" );
      $("#football-teams").removeClass( "hidden" ).addClass( "hidden" );
      $("#baseball-teams").removeClass( "hidden" ).addClass( "hidden" );
      $("#soccer-teams").removeClass( "hidden" ).addClass( "hidden" );


    } else if (sport == "hockey-tab") {
      $("#basketball-teams").removeClass( "hidden" ).addClass( "hidden" );
      $("#hockey-teams").removeClass( "hidden" );
      $("#football-teams").removeClass( "hidden" ).addClass( "hidden" );
      $("#baseball-teams").removeClass( "hidden" ).addClass( "hidden" );
      $("#soccer-teams").removeClass( "hidden" ).addClass( "hidden" );

    } else if (sport == "football-tab") {
      $("#basketball-teams").removeClass( "hidden" ).addClass( "hidden" );
      $("#hockey-teams").removeClass( "hidden" ).addClass( "hidden" );
      $("#football-teams").removeClass( "hidden" );
      $("#baseball-teams").removeClass( "hidden" ).addClass( "hidden" );
      $("#soccer-teams").removeClass( "hidden" ).addClass( "hidden" );

    } else if (sport == "baseball-tab") {
      $("#basketball-teams").removeClass( "hidden" ).addClass( "hidden" );
      $("#hockey-teams").removeClass( "hidden" ).addClass( "hidden" );
      $("#football-teams").removeClass( "hidden" ).addClass( "hidden" );
      $("#baseball-teams").removeClass( "hidden" );
      $("#soccer-teams").removeClass( "hidden" ).addClass( "hidden" );

    } else if (sport = "soccer-tab") {
      $("#basketball-teams").removeClass( "hidden" ).addClass( "hidden" );
      $("#hockey-teams").removeClass( "hidden" ).addClass( "hidden" );
      $("#football-teams").removeClass( "hidden" ).addClass( "hidden" );
      $("#baseball-teams").removeClass( "hidden" ).addClass( "hidden" );
      $("#soccer-teams").removeClass( "hidden" );
    }
  });

</script>
