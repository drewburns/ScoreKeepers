    <div class='large-4 medium-6 small-12 columns baseball-item' team=<%= team.score_percentage("team")%> coach=<%= team.score_percentage("team")%> stadium=<%= team.score_percentage("coach")%> fo=<%= team.score_percentage("frontoffice")%>>
