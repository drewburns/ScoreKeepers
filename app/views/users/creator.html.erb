<h3>Creator Center</h3>

<%= link_to "Create new", new_post_path , :class => 'button'%>
<h3>Pending Posts</h3>
<% @user.pending.each do |post| %>
	<%= link_to post.title, post %>
<% end %>

<h3>Draft Posts</h3>
<% @user.drafts.each do |post| %>
	<%= link_to post.title, post %> | 
	<%=link_to "Edit", edit_post_path(post) %> |
	<% if post.status == "draft" or post.status == "rejected"%>
	  <%= form_for [post], :html => {:id => 'postsubmit'} do |f| %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :title, :value => post.title %>
    <%= f.hidden_field :content, :value => post.content %>
    <%= f.hidden_field :status, :value => "pending" %>
    <%= f.submit 'Submit Post' %>
  <% end %>
<% end %>
<% end %>

<h3>Approved Posts</h3>
<% @user.approved.each do |post| %>
	<%= link_to post.title, post %>
<% end %>

<h3>Rejected Posts</h3>
<% @user.rejected.each do |post| %>
	<%= link_to post.title, post %> | 
	<%=link_to "Edit", edit_post_path(post) %> |
	<% if post.status == "draft" or post.status == "rejected"%>
	  <%= form_for [post], :html => {:id => 'postsubmit'} do |f| %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :title, :value => post.title %>
    <%= f.hidden_field :content, :value => post.content %>
    <%= f.hidden_field :status, :value => "pending" %>
    <%= f.submit 'Submit Post' %>
  <% end %>
<% end %>
<% end %>
