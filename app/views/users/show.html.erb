<h3><%= @user.username%> </h3>
<h3>#<%= @user.this_weeks_rank %> this week | Score: <%= @user.this_weeks_score%> </h3>
<h3>Favorite Teams</h3>
<% @user.teams.each do |team| %>
	<p style="display:inline;"><%= link_to team.name, team %></p> | 
	 <% if user_signed_in? and current_user == @user %>
        <% if current_user.teams.include?(team) %>
        <% userTeam = current_user.userTeams.where(team_id:team.id).first.id%>
            <%= link_to "Remove" , user_team_path(id: userTeam), method: :delete%>
        <% else %>
            <%= link_to "Add to favorites" , user_teams_path(user_id: current_user.id, team_id: team.id), method: :post%>
        <% end %>
      <br><br>

  <% end %>
<% end %>
<h3> Recent User Posts </h3>
<% @user.posts.each do |post| %>

<p style="display:inline;"><%= link_to post.title, post_path(post) %> | Score: <%= post.score %></p> | 
<% if user_signed_in? %>
	<p style="display:inline;"><%=link_to "Up", vote_post_path(post, type: 'up', user_id: current_user.id, id: post.id), method: :post%></p>
	<p style="display:inline;"><%=link_to "Down", vote_post_path(post, type: 'down', user_id: current_user.id, id: post.id), method: :post%></p>
<% end %>
</br>
</br>
<% end %>


